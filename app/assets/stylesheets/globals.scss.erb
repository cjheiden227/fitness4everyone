
@import "mixins";
@import "variables";
@import "foundation/functions";

@media #{$small-only}  {
	$topbar-title-font-size: rem-calc(16);
}
@media #{$super-small-only}{
 	$topbar-title-font-size: rem-calc(16);
 }

html, body{
	@include full-height();
}

#navbar{
	z-index: 9999;
}

#top-overlay li {
  	background: $clear; 
}

#top-overlay li>a, #footer #footerNav li>a {
	@include vendor-prefix(transition, all 200ms ease-in-out);
}

#top-overlay li>a:hover, #top-overlay li.active {
  color: $primary-blue;
}

.logo-font{
	font-family: $logo-font !important;
}

.logo, #logo{
	color: $primary-blue;
	@include vendor-prefix(transition, all 500ms ease-in-out);
	@media #{$super-small-only}{
		font-size: 1.25rem;
	}
}

.logo:hover, #logo:hover{
	color: $alert-color;
}

.text-shadow{
	text-shadow: 1px 1px #000000;
}

.whiteStroke {
    stroke: rgba(253, 253, 253, .05);
    stroke-width: 2;     
}

.vertical-parent{
		position: relative;
}

.vertical-center{
	  	position: absolute;
	  	top: 50%;
	   	transform: translateY(-50%);
		
}

.background{
	@include background();

}

#footer{
	margin-top: -2rem;
	height: 65%;
	color: $white;
	background-image: image-url('footerlogo.png');
	background-repeat: no-repeat;
	background-position: center center; 
	background-size: contain;
	@media #{$small-only} and (max-height:641px)  {
		height: 100%;
	}	
	@media #{$super-small-only} and (max-height:700px)  {
		height: 125%;
	}	
	.row{
		height: 100%;
	}
	
	.border{
		@media #{$medium-up}{
			border:1px solid $bg-grey;
		}
	}
	p{
		padding: 0 1rem 0 1rem;
		@media #{$medium-up}{
			padding: 0 2rem 0 2rem;
		}
	}
	#footerNav{
		padding: 1.5rem 0 .75rem 0;
		margin: 0 auto;
		color: $white;
		font-family: $font-family-custom-serif;
		
		li{
			padding-left: 1rem;
			font-size: rem-calc(18);
			list-style-type: none;
			display: inline-block;
					@media #{$small-only}  {
				display: block;
				padding-left: 0;
				padding-top: .25rem;
			}	
			a{
				color: $white;
			}
			a.active, a:hover{
				color: lighten($primary-blue, 20%);
			}
		}
	}

	.icons{
	
		li{
			display: inline;
			margin: 1rem;
			@media #{$small-only}{
				margin: .5rem;
			}
			.icon-img{
				width: rem-calc(50);
				// @media #{$small-only}{
				// 	width: rem-calc(30);
				// }
				// @media #{$super-small-only}{
				// 	width: rem-calc(30);
				// }
			}
		}

	}

}