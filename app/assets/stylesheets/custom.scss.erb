	$transparent: rgba(#FFFFFF, 0.85);
	$clear: rgba(#FFFFFF, 0);
	$logo-font: "Kaushan Script", cursive;
	$white       : #FFFFFF;
	$oil         : #333333;
	$jet         : #222222;
	$dark-blue: #001829;
	$primary-blue: #0060A1;
	$green: #00A141;
	$bg-grey: #fcfcfc;
	$alert-color: #F22C00;

@mixin full-height(){
    height: 100%;
}

@mixin vendor-prefix($name, $argument) {
  -webkit-#{$name}: #{$argument};
  -ms-#{$name}: #{$argument};
  -moz-#{$name}: #{$argument};
  -o-#{$name}: #{$argument};
  #{$name}: #{$argument};
}

html, body{
	@include full-height();
}

#navbar{
	z-index: 9999;
}

#top-overlay li {
  	background: $clear; 
}

#top-overlay li>a {

	@include vendor-prefix(transition, all 200ms ease-in-out);

}

#top-overlay li>a:hover, #top-overlay li.active {
  text-decoration: underline;
  color: $primary-blue;

}

.logo, #logo{
	font-family: $logo-font;
	color: $primary-blue;
	@include vendor-prefix(transition, all 500ms ease-in-out);
}

.logo:hover, #logo:hover{
	color: $alert-color;
}
#jumbo{
	@include full-height();

	.background{
		@include full-height();
		@include vendor-prefix(background-size, cover);
		width: 100%;
		background-image: image-url('header.svg'), linear-gradient(to bottom, rgba(0,96,161,0.57) 0%, rgba(73,155,234,1) 100%), image-url('womens-fitness.jpg');
		margin-top: -85px
	}

	#jumbotron{
		position: relative;
		top: -75%;
	}

	.bannertext{
		color: white !important;
	}

	.jumbo-top{
		text-shadow: 1px 1px #000000;	
		padding: 1rem;
		border:1px solid $bg-grey;
		@include vendor-prefix(box-shadow,  0px 1px 1px 0px rgba(0,0,0,0.25));
	}

	.jumbo{
		width: 100%;
		margin-top: 2.5rem;
	}
}

