
$logo-font: "Kaushan Script", cursive;
$testimonial-font: "aleo", Cambria, "Times New Roman", serif;
@import "foundation_and_overrides";

@mixin full-height(){
    height: 100%;
}

@mixin vendor-prefix($name, $argument) {
  -webkit-#{$name}: #{$argument};
  -ms-#{$name}: #{$argument};
  -moz-#{$name}: #{$argument};
  -o-#{$name}: #{$argument};
  #{$name}: #{$argument};
}

html, body{
	@include full-height();
}

#navbar{
	z-index: 9999;
}

#top-overlay li {
  	background: $clear; 
}

#top-overlay li>a {
	@include vendor-prefix(transition, all 200ms ease-in-out);

}

#top-overlay li>a:hover, #top-overlay li.active {
  text-decoration: underline;
  color: $primary-blue;

}

.logo-font{
	font-family: $logo-font !important;
}
.logo, #logo{
	
	color: $primary-blue;
	@include vendor-prefix(transition, all 500ms ease-in-out);
}

.logo:hover, #logo:hover{
	color: $alert-color;
}

.text-shadow{
	text-shadow: 1px 1px #000000;
}

.whiteStroke {
    stroke: rgba(253, 253, 253, .05);
    stroke-width: 2;
     
}

.circle{
	width: 200px;
	height: 200px;
	background: $bg-grey;
	-moz-border-radius: 100px;
	-webkit-border-radius: 100px;
	border-radius: 100px;
	margin-left: auto;
  	margin-right: auto;
  	@include vendor-prefix(box-shadow, 1px 1px 1px rgba(0,0,0,1));
  	background-image: url(http://lorempixel.com/output/animals-q-g-640-480-9.jpg);
  	background-size: cover;
  	@media #{$small-only} {
		width: 150px;
		height: 150px;
		-moz-border-radius: 75px;
		-webkit-border-radius: 75px;
		border-radius: 75px;
	}

}


#jumbo{
	@include full-height();

	.background{
		@include full-height();
		@include vendor-prefix(background-size, cover);
		width: 100%;
		background-image: image-url('header.svg'), linear-gradient(to bottom, rgba(0,96,161,0.57) 0%, rgba(73,155,234,1) 90%), image-url('womens-fitness.jpg');
		margin-top: -85px;

		@media #{$small-only} {
			margin-top: 0;
		}
	}

	#jumbotron{
		position: relative;
		top: -75%;
		@media #{$small-only} {
			top: -80%;
		}
	}

	.bannertext{
		color: white !important;
	}

	.jumbo-top{
		padding: 1rem;
		border:1px solid $bg-grey;
		@include vendor-prefix(box-shadow,  0px 1px 1px 0px rgba(0,0,0,0.25));
	}

	.jumbo{
		width: 100%;
		margin-top: 2.5rem;
	}
}

#subsection{
	height: auto;
	// padding-bottom: 8rem;
	background: rgba(28,61,93,1);

	#topTriangleColor{
		fill: rgba(36,77,117,1);
	
   	}
   
   	p, h1, h2, h3, h4, h5, h6{
   		color: $white;
   	}

}

#testimonials{
	height: auto;
	margin-bottom: 4rem;
	p, h1, h2, h3, h4, h5, h6{
		color: $oil;
	}
	p{
		font-family: $testimonial-font;

	}
	#bottomTriangleColor{
		margin: 0 auto;
		fill: rgba(28,61,93,1);
		
   	}
  	.testimonial-row{
  		height: 200px;
  		position: relative;

  	}
  	.vertical-center{
	  	position: absolute;
	  	top: 50%;
	  	left: 65%;
	  	transform: translate(-50%, -50%);
  		
  	}

  	.vertical-center-even{
	  	position: absolute;
	  	top: 50%;
	  	transform: translate(0, -50%);
  		
  	}

	.testimonial-text{
		background-color: #fff;
		@include vendor-prefix(box-shadow, 0px 1px 1px 0px rgba(0,0,0,0.75))
	}
}

#footer{
	height: 50%;
	background-color: #001829;
	background-image: image-url('footerlogo.png');
	background-repeat: no-repeat;
	background-position: center center; 
	background-size: contain;

}



