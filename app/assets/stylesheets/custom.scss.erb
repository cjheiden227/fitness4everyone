
$logo-font: "Kaushan Script", cursive;
$testimonial-font: "aleo", Cambria, "Times New Roman", serif;
@import "foundation_and_overrides";

@mixin full-height(){
    height: 100%;
}

@mixin vendor-prefix($name, $argument) {
  -webkit-#{$name}: #{$argument};
  -ms-#{$name}: #{$argument};
  -moz-#{$name}: #{$argument};
  -o-#{$name}: #{$argument};
  #{$name}: #{$argument};
}

@mixin circle-icon($height, $image_url){
	width: rem-calc($height);
	height: rem-calc($height);
	@include vendor-prefix(border-radius, rem-calc($height/2));
	@include vendor-prefix(box-shadow, 1px 1px 1px rgba(0,0,0,1));
	margin-left: auto;
  	margin-right: auto;
  	background-image: url($image_url);
  	background-size: cover;
}

html, body{
	@include full-height();
}

#navbar{
	z-index: 9999;
}

#top-overlay li {
  	background: $clear; 
}

#top-overlay li>a {
	@include vendor-prefix(transition, all 200ms ease-in-out);
}

#top-overlay li>a:hover, #top-overlay li.active {
  color: $primary-blue;
}

.logo-font{
	font-family: $logo-font !important;
}

.logo, #logo{
	color: $primary-blue;
	@include vendor-prefix(transition, all 500ms ease-in-out);
}

.logo:hover, #logo:hover{
	color: $alert-color;
}

.text-shadow{
	text-shadow: 1px 1px #000000;
}

.whiteStroke {
    stroke: rgba(253, 253, 253, .05);
    stroke-width: 2;     
}

#jumbo{
	@include full-height();

	.background{
		@include full-height();
		@include vendor-prefix(background-size, cover);
		width: 100%;
		background-image: image-url('header.svg'), linear-gradient(to bottom, rgba(0,142,238,0.57) 0%, rgba(0,111,187,1) 90%), image-url('womens-fitness.jpg');
		margin-top: -105px;
		position: relative;

		#jumbo_button{
			position: absolute;
			top: 62%;
		  	left: 50%;
		  	transform: translate(-50%, -50%);
		}

		@media #{$small-only} {
			margin-top: 0;
		}
	}

	#jumbotron{
		position: relative;
		top: -75%;
		@media #{$small-only} {
			top: -80%;
		}
	}

	.bannertext{
		color: white !important;
	}

	.jumbo-top{
		padding: 1rem;
		border:1px solid $bg-grey;
		@include vendor-prefix(box-shadow,  0px 1px 1px 0px rgba(0,0,0,0.25));
	}

	.jumbo{
		width: 100%;
		margin-top: 2.5rem;
	}
}

#subsection, #testimonials{
	height: auto;
}

#subsection .row:first-of-type{
	margin-top: 5rem;
}

#subsection{

	background: $primary-blue;
	
	.subheading-row{
		position: relative;
	}

	.vertical-center{
	  	position: absolute;
	  	top: 50%;
	  	transform: translateY(-50%);	
  	}
	
	.content-block{
		margin-bottom: 5rem;
	}

  	.show-for-small-only .row, .show-for-medium-up{
		margin-top: 2rem;
  	}

	#topTriangleColor{
		fill: rgba(0,55,93, 1);
   	}
   
   	p, h1, h2, h3, h4, h5, h6{
   		color: $white;
   	}

   	.circle{
		@include circle-icon(250, "http://placehold.it/350x150");
	  	@media #{$small-only} {
			@include circle-icon(200, "http://placehold.it/350x150");
		}
	}
}

#testimonials .row{
	margin-top: 2rem;
}

#testimonials{
	background-color: lighten($primary-blue, 7.5%);
	padding-bottom: 10rem;
	p, h1, h2, h3, h4, h5, h6{
		color: $white;
	}

	p{
		font-family: $testimonial-font;
	}

	#bottomTriangleColor{
		margin: 0 auto;
		fill: rgba($primary-blue,1);
   	}

  	.testimonial-row{
  		height: rem-calc(400);
  		@media #{$small-only} {
			height: rem-calc(250);
		}
  	}

	.testimonial-row>.row, .vertical-parent{
		height: 100%;
	}
	
	.vertical-parent{
		position: relative;
	}

	.vertical-center{
	  	position: absolute;
	  	top: 50%;
	   	transform: translateY(-50%);
		
  	}

  	.circle{
		@include circle-icon(400, "http://placehold.it/350x150");
		margin: 0;
	  	@media #{$small-only} {
			@include circle-icon(250, "http://placehold.it/350x150");
		}
	}
}

#footer{

	height: 50%;
	background-color: #001829;
	background-image: image-url('footerlogo.png');
	background-repeat: no-repeat;
	background-position: center center; 
	background-size: contain;
	.row{
		margin: 0;
	}


}



