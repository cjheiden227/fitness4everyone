
@import "globals";

#jumbo{
	@include full-height();

	.background{
		@include full-height();
		@include vendor-prefix(background-size, cover);
		width: 100%;
		background-image: image-url('header.svg'), linear-gradient(to bottom, rgba(0,142,238,0.57) 0%, rgba(0,111,187,1) 90%), image-url('womens-fitness.jpg');
		margin-top: -105px;
		position: relative;

		#jumbo_button{
			position: absolute;
			top: 62%;
		  	left: 50%;
		  	transform: translate(-50%, -50%);
		}

		@media #{$small-only} {
			margin-top: 0;
		}
	}

	#jumbotron{
		position: relative;
		top: -75%;
		@media #{$small-only} {
			top: -80%;
		}
	}

	.bannertext{
		color: white !important;
	}

	.jumbo-top{
		padding: 1rem;
		border:1px solid $bg-grey;
		@include vendor-prefix(box-shadow,  0px 1px 1px 0px rgba(0,0,0,0.25));
	}

	.jumbo{
		width: 100%;
		margin-top: 2.5rem;
	}
}

#subsection, #testimonials{
	height: auto;
}

#subsection .row:first-of-type{
	margin-top: 5rem;
}

#subsection{

	background: $primary-blue;
	
	.subheading-row{
		position: relative;
	}

	.vertical-center{
	  	position: absolute;
	  	top: 50%;
	  	transform: translateY(-50%);	
  	}
	
	.content-block{
		margin-bottom: 5rem;
	}

  	.show-for-small-only .row, .show-for-medium-up{
		margin-top: 2rem;
  	}

	#topTriangleColor{
		fill: rgba(0,55,93, 1);
   	}
   
   	p, h1, h2, h3, h4, h5, h6{
   		color: $white;
   	}
	p{
		@media #{$super-small-only} {
			font-size: .85rem;
		}
	}
   	.circle{
		@include circle-icon(250, image-url('placeholder.gif'));
	  	@media #{$small-only} {
			@include circle-icon(150, image-url('placeholder.gif'));
		}
	}
}

#testimonials .row{
	margin-top: 2rem;
}

#testimonials{
	background-color: lighten($primary-blue, 7.5%);
	padding-bottom: 10rem;
	p, h1, h2, h3, h4, h5, h6{
		color: $white;
	}

	p{
		font-family: $testimonial-font;
		@media #{$super-small-only} {
			font-size: .85rem;
		}
	}

	#bottomTriangleColor{
		margin: 0 auto;
		fill: rgba($primary-blue, 1);
   	}

  	.testimonial-row{
  		height: rem-calc(400);
  		@media #{$medium-only} {
			height: rem-calc(300);
		}
  		@media #{$small-only} {
			height: rem-calc(250);
		}
		@media #{$super-small-only} {
			height: rem-calc(175);
		}
  	}

	.testimonial-row>.row, .vertical-parent{
		height: 100%;
	}
	
  	.circle{
		@include circle-icon(400, image-url('placeholder.gif'));
		margin: 0;
		@media #{$medium-only} {
			@include circle-icon(300, image-url('placeholder.gif'));
		}
	  	@media #{$small-only} {
			@include circle-icon(250, image-url('placeholder.gif'));
		}
		@media #{$super-small-only} {
			@include circle-icon(175, image-url('placeholder.gif'));
		}
	}
}

#curveDownColor, #footer{
	background-color: #001829;
}

#curveDownColor{
	fill: lighten($primary-blue, 7.5%);
}





